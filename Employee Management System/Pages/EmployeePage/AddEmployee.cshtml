@page
@model Employee_Management_System.Model.EmployeeModel
<span class="text-primary">
    <a href="/Index" class=" text-decoration-none">Home</a>
    &nbsp;&nbsp;&nbsp;>>&nbsp;&nbsp;&nbsp;
    <a href="/EmployeePage/GetAll" class=" text-decoration-none">Employees</a>
    &nbsp;&nbsp;&nbsp;>>&nbsp;&nbsp;&nbsp;
    <a href="/EmployeePage/AddEmployee" class=" text-decoration-none">Add Employee</a>
    &nbsp;&nbsp;&nbsp;>>&nbsp;&nbsp;&nbsp;
</span>
<div class="container">
    <form method="post">
        <div class="h3 mt-4 mb-3">
            Add User
        </div>
        <div class="form-control">
            <div class="col-12 row mt-2">
                <div class="col-4">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                </div>
                <div class="col-4">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                </div>
                <div class="col-4">
                    <label asp-for="@Model.BirthDate"></label>
                    <input asp-for="@Model.BirthDate" class="form-control" />
                </div>
                <div class="col-4">
                    <label asp-for="@Model.Department"></label>
                    <input asp-for="@Model.Department" class="form-control" />
                </div>
            </div>
            <div class="mt-3 mb-2">
                <center>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-secondary ms-2" asp-page="/EmployeePage/GetAll">Back</a>
                </center>
            </div>
        </div>
    </form>
